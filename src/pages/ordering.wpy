<script>
    import wepy from 'wepy'
    import Api from '../utils/api'
    export default class Resident extends wepy.page {
        config = {
            navigationBarTitleText: '房屋预定'
        }
        components = {
            
        }
        data = {
            height: 0,
            rooms: 1,
            mens: 2
        }
        methods = {
            mens (type) {
                if(type == 1) {
                    this.mens += 1
                }
                else {
                    if(this.mens > 1) {
                        this.mens -= 1
                    }
                    else {
                        wepy.showToast({
                            title: '入住人不能少于1人',
                            icon: 'none'
                        })
                    }
                    
                }
                this.$apply()
            },
            rooms (type) {
                if(type == 1) {
                    this.rooms += 1
                }
                else {
                    if(this.rooms > 1) {
                        this.rooms -= 1
                    }
                    else {
                        wepy.showToast({
                            title: '房间不能少于1间',
                            icon: 'none'
                        })
                    }
                    
                }
                this.$apply()
            }
        }
        async onLoad () {
            let sysInfo = wepy.getSystemInfoSync()
            this.height = sysInfo.screenHeight
        }
    }
</script>